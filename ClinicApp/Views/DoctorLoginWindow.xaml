<Window x:Class="ClinicApp.Views.DoctorLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Doctor Login"
        Height="307" Width="400"
        WindowStartupLocation="CenterScreen">

    <StackPanel Margin="30">
        <TextBlock Text="Doctor Login" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

        <TextBlock Text="Email"/>
        <TextBox x:Name="EmailBox" Margin="0,5"/>

        <TextBlock Text="Password"/>
        <PasswordBox x:Name="PasswordBox" Margin="0,5"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Register" Width="96" Margin="5" Click="Register_Click"/>
            <Button Content="Login" Width="80" Margin="5" Click="Login_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
