<Window x:Class="ClinicApp.Views.PatientForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Patient Information" Height="400" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBox x:Name="FullNameBox"
                         materialDesign:HintAssist.Hint="Name"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         Margin="0,10"/>

                <ComboBox x:Name="GenderBox"
                          materialDesign:HintAssist.Hint="Gender"
                          Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                          Margin="0,10">
                    <ComboBoxItem Content="Male"/>
                    <ComboBoxItem Content="Female"/>
                </ComboBox>

                <DatePicker x:Name="BirthDatePicker"
                            materialDesign:HintAssist.Hint="Birth Date"
                            Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
                            Margin="0,10"/>

                <TextBox x:Name="PhoneBox"
                         materialDesign:HintAssist.Hint="Phone"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         Margin="0,10"/>

                <TextBox x:Name="EmailBox"
                         materialDesign:HintAssist.Hint="Email"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         Margin="0,10"/>
                <TextBox x:Name="MedicalHistoryBox"
                         materialDesign:HintAssist.Hint="Medical History"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         Margin="0,10"
                         AcceptsReturn="True"
                         Height="80"
                         TextWrapping="Wrap"/>

            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="Save"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Click="Save_Click"
                    Margin="0,0,10,0"/>
            <Button Content="Cancel"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
