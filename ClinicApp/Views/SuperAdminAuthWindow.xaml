<Window x:Class="ClinicApp.Views.SuperAdminAuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Verify Super Administrator" Height="268" Width="350"
        WindowStartupLocation="CenterScreen">

    <StackPanel Margin="20">
        <TextBlock Text="Please enter the super administrator credentials" FontWeight="Bold" FontSize="16" Margin="0,0,0,15"/>

        <TextBlock Text="Email"/>
        <TextBox x:Name="EmailBox" Margin="0,5"/>

        <TextBlock Text="Password"/>
        <PasswordBox x:Name="PasswordBox" Margin="0,5"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Verify" Width="80" Margin="5" Click="Verify_Click"/>
            <Button Content="Cancel" Width="80" Margin="5" Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
